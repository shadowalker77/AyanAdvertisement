<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/adMobInterstitial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ad mob interstitial" />

        <Button
            android:id="@+id/adMobRewardedVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ad mob rewarded video" />

        <Button
            android:id="@+id/adMobStandardBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ad mob standard banner" />

        <FrameLayout
            android:id="@+id/adViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/tapsellInterstitial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="tapsell interstitial" />

        <Button
            android:id="@+id/tapsellRewardedVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tapsell rewarded video" />

        <Button
            android:id="@+id/tapsellStandardBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tapsell standard banner" />

        <FrameLayout
            android:id="@+id/tapsellViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>